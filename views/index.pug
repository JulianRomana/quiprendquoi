include ../partials/header.pug
section.wrapper
  main
    h1.partyTitle #{title}
    h2.partySubtitle Créer un évenement
    form(method="post" action="/party").newParty
      div.newParty__fields
        label(for="name") Nom de l'événement
        input(name="name" id="name" required minlength="3" placeholder="Bar Mitzvah")
        label(for="author") Nom de l'auteur
        input(type="text" name="author" id="author" required minlength="2" placeholder="Tupac Amaru Shakur")
        label(for="date") Date
        input(type="date" name="date" id="date")
      button(type="submit") Créer
script.
  if (navigator.serviceWorker) {
    navigator.serviceWorker.register("/sw.js")
      .then(() => console.log('Service worker is registered'))
      .catch(err => console.warn(err));
  } else {
    console.log('Nothing to see here...');
  }