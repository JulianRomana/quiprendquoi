html(lang="fr")
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
  body
    include ../partials/header.pug
    h1 Bienvenue sur - #{title}
    h2 créer un évenement
    form(method="post" action="/party")
      div
        label(for="name") Nom de l'événement
        input(name="name" id="name" required minlength="3" placeholder="Bar Mitzvah")
        label(for="author") Nom de l'auteur
        input(type="text" name="author" id="author" required minlength="2" placeholder="Tupac Amaru Shakur")
        label(for="date") Date
        input(type="date" name="date" id="date")
      button(type="submit") Créer